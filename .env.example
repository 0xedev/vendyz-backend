# Backend Environment Variables

# RPC endpoint for Base mainnet
BASE_RPC_URL=https://mainnet.base.org

# Private key for backend wallet (authorized in TokenTreasury)
# This wallet must be authorized via TokenTreasury.authorizeBackend()
BACKEND_PRIVATE_KEY=

# API Keys for price oracles
# Moralis API key (fallback if CoinGecko fails)
MORALIS_API_KEY=

# Contract addresses (Base mainnet)
VENDING_MACHINE_ADDRESS=0x12e3390140A4fb3424493F039aE695AA2d7AaE9a
TOKEN_TREASURY_ADDRESS=0x194A3440A2E11b8eDBCf69d7f14304cA92a75513
SPONSOR_AUCTION_ADDRESS=0xf4b0943587Ac61Be0Eaed8Ed0fCd45505F72c049
USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Database Configuration (required for wallet credential storage)
DATABASE_URL=postgresql://username:password@localhost:5432/vendyz
# Generate a 32-byte encryption key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# API Configuration
API_PORT=3001
FRONTEND_URL=http://localhost:3000

# Wallet generation settings
# Number of random words to use for wallet generation (mnemonic)
MNEMONIC_WORDS=12

# Token selection algorithm
# Percentage of sponsor tokens vs random tokens (0-100)
SPONSOR_TOKEN_PERCENTAGE=50

# Tier-based token distribution
# Format: tier_number=num_tokens,usd_value
TIER_1_TOKENS=3,15
TIER_2_TOKENS=5,50
TIER_3_TOKENS=8,150
TIER_4_TOKENS=12,500

# Logging
LOG_LEVEL=info

# Chain ID
CHAIN_ID=8453
