{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vendyz-backend",
  "version": "1.0.0",
  "description": "Backend service for Vendyz wallet vending machine - listens for WalletReady events and funds wallets",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:logs": "pm2 logs vendyz-backend",
    "pm2:monit": "pm2 monit",
    "setup": "node src/setup-check.js",
    "test:oracle": "node src/test-oracle.js",
    "test:selection": "node src/test-token-selection.js",
    "test:coingecko": "node src/test-coingecko.js",
    "test": "npm run test:oracle && npm run test:selection"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "base",
    "vrf",
    "wallet"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "viem": "^2.21.54"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "pm2": "^5.3.0"
  }
}
